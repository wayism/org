/* Basic Reset */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: Georgia, serif;
    line-height: 1.6;
    color: #333;
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
}

/* Navigation */
nav {
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid #ddd;
}

nav a {
    margin-right: 1rem;
    color: #0066cc;
    text-decoration: none;
}

nav a:hover {
    text-decoration: underline;
}

/* Typography */
h1, h2, h3, h4 {
    margin: 1.5rem 0 1rem;
    color: #2c3e50;
}

p {
    margin-bottom: 1rem;
}

/* Special Elements */
.logical-chain {
    background: #f8f9fa;
    border-left: 4px solid #0066cc;
    padding: 1rem;
    margin: 1rem 0;
}

.related {
    margin-top: 2rem;
    padding-top: 1rem;
    border-top: 1px solid #ddd;
}

/* Lists */
.page-list {
    list-style: none;
}

.page-list li {
    margin-bottom: 1.5rem;
}

/* Footer */
footer {
    margin-top: 3rem;
    padding-top: 1rem;
    border-top: 1px solid #ddd;
    text-align: center;
    color: #666;
}
